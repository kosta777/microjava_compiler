    private int line;
    private Term Term;
    private ExprList ExprList;

    public Expr (Term Term, ExprList ExprList) {
        this.Term=Term;
        if(Term!=null) Term.setParent(this);
        this.ExprList=ExprList;
        if(ExprList!=null) ExprList.setParent(this);
